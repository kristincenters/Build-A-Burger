<div class="jumbotron text-center">
    <h1>Build-A-Burger</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="bu">Burger Name:</label>
                    <input type="text"
                        id="bu"
                        name="name">
                </div>

                <button type="submit"
                    class="btn btn-success btn-lg">Order It!</button>
            </form>
        </div>
        <div class="col-sm-4">
            <h2>Ordered Burgers</h2>
            <ul class="list-group">
                {{#each burger}}
                {{#unless devoured}}
                {{> burger/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-4">
            <h2>Devoured Burgers</h2>
            <ul class="list-group">
                {{#each burger}}
                {{#if devoured}}
                {{> burger/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>