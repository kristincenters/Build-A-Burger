<h1>Build-A-Burger</h1>

<h2>Ordered Burgers</h2>

<ul>
    {{#each burger}}
    {{#unless devoured}}
    {{> burger/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
    {{#each burger}}
    {{#if devoured}}
    {{> burger/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text"
            id="bu"
            name="name">
    </div>

    <button type="submit">Name Your Burger</button>
</form>